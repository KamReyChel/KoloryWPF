<Window x:Name="OknoGlowne" x:Class="KoloryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoloryWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900"
        KeyDown="Window_KeyDown"
        Closed="Window_Closed"
        Left="Auto"
        Top="Auto"
        >

    <Grid>

        <Rectangle x:Name="rectangle" Fill="#FFF4F4F5" Margin="10,10,10,88" Stroke="Black" Grid.ColumnSpan="2"/>
        <Slider x:Name="SliderR" Margin="10,0,10,62" VerticalAlignment="Bottom" Height="21" ValueChanged="SliderR_ValueChanged" Maximum="255" Grid.ColumnSpan="2"/>
        <Slider x:Name="SliderG" Margin="10,0,10,36" VerticalAlignment="Bottom" Height="21" ValueChanged="SliderR_ValueChanged" Maximum="255" Grid.ColumnSpan="2"/>
        <Slider x:Name="SliderB" Margin="10,0,10,10" Height="21" VerticalAlignment="Bottom" ValueChanged="SliderR_ValueChanged" Maximum="255" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
